{
  "extends": ["eslint:recommended", "plugin:react/recommended"],

  "env": {
    "es6": true,
    "node": true,
    "browser": true,
    "jest": true
  },

  "plugins": ["react", "react-hooks"],

  "parser": "babel-eslint",

  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "sourceType": "module"
  },

  "settings": {
    "react": {
      "version": "16.9"
    }
  },

  "rules": {
    "no-console": "off",
    "no-unused-vars": [
      "error",
      { "varsIgnorePattern": "[iI]gnored", "argsIgnorePattern": "^next$" }
    ],
    "lodash/prefer-constant": "off",
    "react-hooks/rules-of-hooks": "error"
  }
}
